{
  "extends": "../../tsconfig.base.json",
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "compilerOptions": {
    "moduleDetection": "force",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@root/*": [
        "../../*"
      ],
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@repositories/*": [
        "./src/repositories/*"
      ],
      "@interfaces/*": [
        "./src/interfaces/*"
      ],
      "@libs/*": [
        "./src/libs/*"
      ],
      "@models/*": [
        "./src/models/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@src/*": [
        "./src/*"
      ],
    }
  }
}
